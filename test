 public static void addChildElement(Document doc, Element parent, String name, String value) {
        Element element = doc.createElement(name);

        // Append a text node only if value is not null; otherwise, append an empty text node
        // Explicitly create an empty text node
        element.appendChild(doc.createTextNode(Objects.requireNonNullElse(value, "")));

        parent.appendChild(element);
    }
