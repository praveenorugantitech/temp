
    strSql = "SELECT PCMR03_FIRMWARE_K, PCMR03_FIRMWARE_N, " & _
	            "PCMR03_FIRMWARE_X, PCMR03_REVW_RESP_C  " & _ 
			"FROM " & _
                "dbo.WPCMR03_FIRMWARE " & _
            "Where " & _
                "PCMR03_SEL_GRP_R > 0 " & _
                "And PCMR03_FIRMWARE_K in (Select PCMR03_FIRMWARE_K From dbo.WPCMR23_REL_TYP_FIRMWARE Where PCMR15_REL_TYP_C = ?) " & _
			"Order By " & _
                "PCMR03_SORT_ORD_R, PCMR03_FIRMWARE_N "
